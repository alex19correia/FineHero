# Stripe Configuration for FineHero Payment System
# Copy this file to .env and fill in your actual Stripe credentials

# Stripe API Keys (required)
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_51xxxxxx... # Your Stripe secret key (starts with sk_test_ or sk_live_)
STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxxx... # Your Stripe publishable key (starts with pk_test_ or pk_live_)

# Stripe Webhooks (required for payment processing)
# Get this from your Stripe Dashboard: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxxx... # Webhook endpoint secret

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:3000 # Your frontend application URL

# Stripe Configuration
STRIPE_CURRENCY=eur # Default currency (eur, usd, etc.)
STRIPE_SUCCESS_URL=http://localhost:3000/payment-success # Payment success redirect URL
STRIPE_CANCEL_URL=http://localhost:3000/payment-cancel # Payment cancel redirect URL

# Subscription Configuration
STRIPE_DEFAULT_PRICE_ID=price_xxxxxx # Default subscription price ID
STRIPE_TRIAL_DAYS=14 # Trial period in days (optional)

# Customer Portal Configuration
STRIPE_PORTAL_RETURN_URL=http://localhost:3000/dashboard # Portal return URL

# Test Mode vs Live Mode
# Use test mode for development (test keys start with sk_test_/pk_test_)
# Use live mode for production (live keys start with sk_live_/pk_live_)

# Development Testing
# Test card numbers for development:
# Visa: 4242424242424242
# Mastercard: 5555555555554444
