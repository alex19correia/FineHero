# Production Environment Configuration for FineHero Phase 3
# Copy this file to .env and update with your production values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database type: sqlite or postgresql
DATABASE_TYPE=postgresql

# PostgreSQL Configuration
POSTGRES_HOST=your-postgres-host.com
POSTGRES_PORT=5432
POSTGRES_DB=finehero_prod
POSTGRES_USER=finehero_user
POSTGRES_PASSWORD=your-secure-password

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# SQLite (Development only)
SQLITE_DB_PATH=finehero.db

# ===========================================
# REDIS CACHING CONFIGURATION
# ===========================================

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_URL= # Optional: full Redis URL for cloud services

# Cache Settings
CACHE_DEFAULT_TTL=3600
DOCUMENT_CACHE_TTL=7200
FINES_CACHE_TTL=1800

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# App Configuration
APP_NAME=FineHero AI
ENVIRONMENT=production
DEBUG=false

# Logging
LOG_LEVEL=INFO
DB_ECHO=false

# Security
SECRET_KEY=your-super-secret-key-change-this
SECRET_KEY_FALLBACK=your-backup-secret-key

# ===========================================
# API CONFIGURATION
# ===========================================

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# PERFORMANCE MONITORING
# ===========================================

# Performance Monitoring
MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=2.0
PERFORMANCE_SAMPLE_RATE=1.0

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Google AI API
GOOGLE_AI_API_KEY=your-google-ai-key

# Tesseract (for OCR)
TESSERACT_CMD=tesseract

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# ===========================================
# DEVELOPMENT SETTINGS (Override in development)
# ===========================================

# Development Database (SQLite)
DATABASE_TYPE_DEV=sqlite
SQLITE_DB_PATH_DEV=finehero_dev.db

# Development Redis (if different)
REDIS_HOST_DEV=localhost
REDIS_PORT_DEV=6379

# Development Settings
DEBUG_DEV=true
LOG_LEVEL_DEV=DEBUG